{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "lib": ["ES2022", "DOM"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": ["src", "scripts"]
}
